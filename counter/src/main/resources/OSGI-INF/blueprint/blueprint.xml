<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <!-- Create a persistent configuration to control the name of our CounterService -->
    <cm:property-placeholder id="counterSettings" persistent-id="org.opennms.features.counter.settings"
                             update-strategy="reload">
        <cm:default-properties>
            <cm:property name="name" value="demo"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <!-- Find an implementation of the AlarmDao interface to pass to our CounterService. This is provided by the OIA.-->
    <reference id="alarmDao" interface="org.opennms.integration.api.v1.dao.AlarmDao"/>

    <!-- Instantiate a copy of our CounterService and wire in the AlarmDao and configured name -->
    <bean id="counter" class="org.opennms.features.counter.CounterServiceImpl">
        <argument ref="alarmDao"/>
        <argument value="${name}"/>
    </bean>
    <!-- Advertise the services our CounterService provides via the OSGi registry -->
    <service ref="counter" interface="org.opennms.integration.api.v1.alarms.AlarmLifecycleListener"/>
    <service ref="counter" interface="org.opennms.features.counter.api.CounterService"/>

    <!-- Any time a 'ThingSupplierService' is registered, bind it to our CounterService -->
    <reference-list interface="org.opennms.features.counter.api.ThingSupplierService" availability="optional">
        <reference-listener bind-method="bindThingSupplier" unbind-method="unbindThingSupplier" ref="counter"/>
    </reference-list>
</blueprint>